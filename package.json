{
  "name": "BackEnd-Jeu",
  "type": "module",
  "scripts": {
    "dev": "node --watch src/server.js",
    "start": "node src/server.js",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node prisma/seed.js",
    "lint": "eslint .",
    "test": "mocha tests/**/*.test.js --timeout 10000",
    "coverage": "nyc mocha --require dotenv/config --file tests/setup.js --timeout 20000 \"tests/**/*.test.js\" && nyc report --reporter=text-summary --reporter=html",
    "backup": "bash scripts/backup.sh"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.1",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "chai": "^6.2.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.11.1",
    "jest": "^29.7.0",
    "mocha": "^11.7.4",
    "nyc": "^17.1.0",
    "prisma": "^6.18.0",
    "sinon": "^21.0.0",
    "supertest": "^6.3.4"
  }
}
